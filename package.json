{
  "name": "react-typescript-npm",
  "version": "0.0.2",
  "description": "React npm library boilerplate with Typescript",
  "main": "lib/index.js",
  "scripts": {
    "prepublish": "npm run build",
    "build": "tsc -p tsconfig.build.json",
    "format": "prettier --write \"src/**/*.ts\"",
    "dev": "concurrently --handle-input \"wait-on lib/index.js && nodemon\" \"tsc -w -p tsconfig.build.json\" ",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "lint": "tslint -p tsconfig.json -c tslint.json"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node"
  },
  "keywords": [
    "react",
    "typescript",
    "library",
    "boilerplate",
    "module"
  ],
  "author": "Joshua Tonga <hellojoshuatonga@gmail.com> (https://hellojoshuatonga.github.io/)",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^24.0.23",
    "concurrently": "^5.0.0",
    "jest": "^24.9.0",
    "nodemon": "^2.0.1",
    "prettier": "^1.19.1",
    "ts-jest": "^24.2.0",
    "ts-node": "^8.5.4",
    "tslint": "^5.20.1",
    "typescript": "^3.7.3",
    "wait-on": "^3.3.0"
  }
}
